                    src/common.c \
                    src/syscall.c \
                    src/memory.c \
                    src/instrument.c \
                    src/net.c

se_@VGCONF_ARCH_PRI@_@VGCONF_OS@_SOURCES      = \
	$(SE_SOURCES_COMMON)
se_@VGCONF_ARCH_PRI@_@VGCONF_OS@_CPPFLAGS     = \
	$(AM_CPPFLAGS_@VGCONF_PLATFORM_PRI_CAPS@)
