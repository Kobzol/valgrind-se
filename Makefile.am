noinst_PROGRAMS  = se-@VGCONF_ARCH_PRI@-@VGCONF_OS@
if VGCONF_HAVE_PLATFORM_SEC
noinst_PROGRAMS += se-@VGCONF_ARCH_SEC@-@VGCONF_OS@
